<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="8dp"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/row_posts_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:maxLines="1"
            android:paddingTop="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:textSize="18sp"
            android:textColor="@color/postTitle"
            fontPath="fonts/Montserrat-Bold.ttf"
            tools:ignore="MissingPrefix" />

        <TextView
            android:id="@+id/row_posts_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/row_posts_title"
            android:maxLines="1"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"
            android:textSize="14sp"
            android:textColor="@color/postLocation"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/row_posts_photo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/row_posts_location"
            android:scaleType="centerCrop"
            fresco:placeholderImage="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/row_posts_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/row_posts_photo"
            android:maxLines="3"
            android:padding="15dp"
            android:textSize="14sp"
            android:textColor="@color/postDescription"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>

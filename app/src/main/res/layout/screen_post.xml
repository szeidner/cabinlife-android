<?xml version="1.0" encoding="utf-8"?>
<com.stevezeidner.cabinlife.ui.view.PostView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/post_photo"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                fresco:placeholderImage="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/post_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/post_photo"
                android:padding="15dp"
                android:textColor="@color/postDescription"
                android:textSize="14sp" />
        </RelativeLayout>
    </ScrollView>

</com.stevezeidner.cabinlife.ui.view.PostView>
